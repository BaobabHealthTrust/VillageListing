<html>
<head>

    <style type="text/css">
        .buttons {
            top: 0px;
        }
        .button {
            font-size: 24px;
            text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            cursor: pointer;
            margin: 5px 0px 0px;
            color: #ffffff;
            padding: 10px;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            width: 120px;
            min-height: 55px;
            margin: 3px;
            border-radius: 3px !important;
        }
        .button-cancel:hover {
            border: #5ca6c4;
            background-color: red;
        }
        .button-cancel {
            border: #7eb9d0;
            background-color: darkred;
            float: left;
        }
        .button-finish:hover {
            border: #224b09;
            background-color: #224b09;
        }
        .button-finish {
            border: #4ba614;
            background-color: #4ba614;
            float: right;
        }
        .feed-body {
            height: 90%;
            top: 0px;
            left: 0px;
            width: 99.9%;
            overflow-y:auto;
            overflow-x:hidden;
            border-radius: 10px;
            border: 1px solid black;
        }
        .row-button-print {
            position: fixed;
            left: 0px;
            bottom: 0px;
            height: 80px;
            overflow: hidden;
            padding-right: 20px;
            width: 100%;
            background-color: rgb(51,51,51);
        }
        .modalDialog {
            position: fixed;
            font-family: Arial, Helvetica, sans-serif;
            top: -120px;
            right: 0;
            bottom: 0;
            left: 0;
            background: rgba(0,0,0,0.8);
            z-index: 99999;
            opacity:0;
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;
            transition: opacity 400ms ease-in;
            pointer-events: none;
        }
        .modalDialog:target {
            opacity:1;
            pointer-events: auto;
        }
        .modalDialog > div {
            width: 400px;
            position: relative;
            margin: 10% auto;
            padding: 5px 20px 13px 20px;
            border-radius: 10px;
            background: #fff;
            background: -moz-linear-gradient(#fff, #999);
            background: -webkit-linear-gradient(#fff, #999);
            background: -o-linear-gradient(#fff, #999);
        }
        .close {
            background: darkred;
            color: #FFFFFF;
            line-height: 40px;
            line-width: 40px;
            position: fixed;
            right: 70px;
            text-align: center;
            top: 70px;
            width: 35px;
            font-size: 50px;
            text-decoration: none;
            font-weight: bold;
            -webkit-border-radius: 12px;
            -moz-border-radius: 12px;
            border-radius: 0px;
            -moz-box-shadow: 1px 1px 3px #000;
            -webkit-box-shadow: 1px 1px 3px #000;
            box-shadow: 1px 1px 3px #000;
        }
        .close:hover {
            background: red;
        }
        #modal_title {
            background-color: darkgray;
            padding: 1px;
            border-radius: 5px;
            top: 0;
        }
        #showArticle{}
        #article_holder{
            height: 70%;
            width: 90%;
            overflow-y: auto;
            overflow-x: hidden;
            border-radius: 10px;
            border: 1px solid ghostwhite;
            font-size: 24px;
            padding: 20px;
        }
        #article_content{}
        #modal_content{
            padding: 10px;
            border: 1px black solid;
            border-top: none;
            border-bottom: none ;
            border-radius: 5px;
            top: 0;
        }
        a {
            color: black;
            text-decoration: none;
            cursor: hand;
        }
    </style>

    <%= javascript_include_tag 'jquery-3.2.1.min'  %>

</head>
<body>

<div id="feed" class="feed-body">
    <ul style="padding: 0px; list-style: none; width: 100%; margin: 0px;">
        <% i = 0 %>
        <% (@news || []).each do |article| %>
            <!-- to be filtered in correctly
            article.category = 'local_news' || 'sports_news'
            -->
            <% if i % 2 == 0 %>
                <li class="<% article.title %>" id="<% article.id %>" onclick="loadModal('<%= article.title %>','<%= Mysql.escape_string(article.body) %>')"
                    style="padding: 20px; font-size: 24px; text-decoration: none; background-color: lightgray;
                            border-bottom: 1px dotted rgba(204,204,204,1)"
                >
            <% else %>
                <li class="<% article.title %>" id="<% article.id %>" onclick="loadModal('<%= article.title %>','<%= Mysql.escape_string(article.body) %>')"
                    style="padding: 20px; font-size: 24px; text-decoration: none; background-color: ghostwhite;
                            border-bottom: 1px dotted rgba(204,204,204,1)"
                >
            <% end %>
                <a class="title" href="#showArticle" style="padding: 20px; font-size: 24px; border-bottom: 1px dotted
                        rgba(204,204,204,1); text-decoration: none">
                    <%= article.title %>
                </a>
            </li>
            <% i += 1 %>
        <% end %>
    </ul>

    <!-- Modal -->
    <div id="showArticle" class="modalDialog">
        <div id="article_holder">
            <a href="#close" title="Close" class="close">X</a>
            <div id="article_content"></div>
        </div>
    </div>
</div>

<!-- Controls -->
<div class="row-button-print">
    <div class="buttons">
        <%= button_to 'Maliza', {}, {class: 'button button-finish'} %>
        <%= button_to 'Bwerera', {}, {class: 'button button-cancel'} %>
    </div>
</div>

<script type="text/javascript">
    function loadModal(title, content) {
		$('ul').on('click', 'li', function() {
			var article_content = document.getElementById('article_content');
			article_content.innerHTML = "<div id='modal_title'><h1>" + title + "</h1></div>" + "<div id='modal_content'>" + content + "</div>";
		});
	};
</script>
<!-- //-->
</body>
</html>
