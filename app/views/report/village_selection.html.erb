<script>
  var tt_cancel_destination = "/report/index";
</script>

<style>
.inputFrameClass {
  height: 85%;
}

.options {
  height: 88%;
}


/* .......................................................... */


.tt_controls_chaka_chobadwa_choyamba .inputFrameClass {
  display: none;
}

.tt_controls_chaka_chobadwa_choyamba #Unknown, #backspace {
  display: none;
}


.tt_controls_mwezi_wobadwa_woyamba .keyboard {
  display: none !important;
}

#tt_page_mwezi_wobadwa_choyamba .options {
  height: 515px;
}

#tt_page_mwezi_wobadwa_woyamba .options li {
  font-size: 30px;
}


.tt_controls_mwezi_wobadwa_womaliza .keyboard {
  display: none !important;
}

#tt_page_mwezi_wobadwa_womaliza .options {
  height: 515px;
}

#tt_page_mwezi_wobadwa_womaliza .options li {
  font-size: 30px;
}


</style>

<%=form_tag "/#{params[:report_path]}" do%>
  <%= select_tag 'ta[villages][]',
      options_for_select(@villages.sort, []),
      :helpText => "Sakhani Mmidzi yamu TA: #{session[:user]['ta']}" ,
      :multiple =>  true %> 

  <%if params[:report_path] == 'village_population_birth_year'%>
    <%= text_field_tag "person[birth_year_start]", nil,
      {:id => "year_of_birth_start",
      :field_type => "number",
      :tt_pageStyleClass => "NumbersWithUnknown",
      :absoluteMax => Date.today.year,
      :absoluteMin => (Date.today.year - 120),
      :min => (Date.today.year - 80),
      :helptext => "Chaka Chobadwa choyamba"} %>

  <%= select_tag "person[birth_month_start]", month_name_options,
    {:id => "month_of_birth_start",
    :helptext => "Mwezi Wobadwa woyamba",
    :tt_pageStyleClass => "tt_controls_month_of_birth" } %>

    <%= text_field_tag "person[birth_year_end]", nil,
      {:id => "year_of_birth_end",
      :field_type => "number",
      :tt_pageStyleClass => "NumbersWithUnknown",
      :absoluteMax => Date.today.year,
      :absoluteMin => (Date.today.year - 120),
      :min => (Date.today.year - 80),
      :helptext => "Chaka Chobadwa chomaliza"} %>

  <%= select_tag "person[birth_month_end]", month_name_options,
    {:id => "month_of_birth_start",
    :helptext => "Mwezi Wobadwa womaliza",
    :tt_pageStyleClass => "tt_controls_month_of_birth" } %>






  <%end%>
<%end%>
