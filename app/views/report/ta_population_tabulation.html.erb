<style>

body {
  -webkit-user-select: none;  /* Chrome all / Safari all */
  -moz-user-select: none;     /* Firefox all */
  -ms-user-select: none;      /* IE 10+ */
  user-select: none;          /* Likely future */ 
}

img {
  user-drag: none; 
  user-select: none;
  -moz-user-select: none;
  -webkit-user-drag: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  pointer-events: none;
}

.main-page-container  {
  display: table;
  width: 100%;
  padding: 0px 1px 0px 1px;
}

.main-page-container-rows  {
  display: table-row;
}

.cells {
  display: table-cell;
}


/* ...................................... */
.divbtn {
  height: 265px;
  display: table;
  margin-top: 10px;
  cursor:pointer;
}

.icons {
  width: 160px;
  height: 160px;
  margin-top: 10%;
  text-align: middle;
}

.divbtn p {
  font-weight: bold;
}

.btncells {
  width: 25%;
  text-align: center;
}

.small-icons {
  width: 100px;
  height: 100px;
}

.header .cells {
  vertical-align: middle; 
  padding-right: 5px;
}

#scan {
  background-color: lightgrey;
  border-style: solid;
  border-width: 1px;
  font-size: 80px;
  margin-bottom: 6px;
  width: 44%;
}

.header .icons {
  width: 100px;
  height: 100px;
}

/* ...................................... */

.people {
  padding-top: 10px;
}

.people th {
  border-style: solid;
  border-width: 1px;
  text-align: right;
  padding-right: 10px;
}

.people td {
  border-style: solid;
  border-width: 1px;
  text-align: right;
  padding-right: 10px;
}

.table-container {
  height: 75%;
  overflow: auto;
}

.percentage {
  background-color: gold;
}

</style>

<%= render :partial => 'user/header' %>


<div class="table-container">

<table class="people" style="width: 99%">
  <thead>
    <tr>
      <th style="text-align: left;">Village</th>
      <th>Female</th>
      <th class="percentage">Female(%)</th>
      <th>Male</th>
      <th class="percentage">Male(%)</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
  <%
  total_females = 0 ; total_males = 0
  (@stats || {}).each do |village, gender|%>
  <tr>
    <td style="text-align: left;"><%=village%></td>
    <td><%=gender['F']%></td>
    <td class="percentage"><%=(gender['F'].to_i*100)/(gender['M'].to_i + gender['F'])%>%</td>
    <td><%=gender['M']%></td>
    <td class="percentage"><%=(gender['M'].to_i*100)/(gender['M'].to_i + gender['F'])%>%</td>
    <td><%=(gender['M'].to_i + gender['F'])%></td>
  </tr>
  <%
  total_females +=  gender['F'].to_i ; total_males +=  gender['M'].to_i
  end%>
  
  <%if @stats.length > 0%>
  <tr style="background-color: lightgrey;">
    <td style="text-align: left;">Total</td>
    <td><%=total_females%></td>
    <td class="percentage"><%=(total_females *100)/(total_females + total_males)%>%</td>
    <td><%=total_males%></td>
    <td class="percentage"><%=(total_males *100)/(total_females + total_males)%>%</td>
    <td><%=(total_females + total_males)%></td>
  </tbody>
  <%end%>
</table>

</div>
<%= render :partial => 'footer' %>

